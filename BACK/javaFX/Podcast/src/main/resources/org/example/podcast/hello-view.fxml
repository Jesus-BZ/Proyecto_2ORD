<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.podcast.HelloController">

    <children>
        <!-- Título -->
        <Label layoutX="240.0" layoutY="20.0" text="podcast">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <!-- Etiquetas y campos -->
        <Label layoutX="20.0" layoutY="110.0" text="id del podcast" />
        <TextField fx:id="txtIDPodcast" layoutX="100.0" layoutY="105.0" prefWidth="150.0" />

        <Label layoutX="20.0" layoutY="150.0" text="nombre:" />
        <TextField fx:id="txtnombre" layoutX="100.0" layoutY="145.0" prefWidth="300.0" />

        <Label layoutX="18.0" layoutY="200.0" text="puesto " />
        <TextField fx:id="txtvaloracion" layoutX="101.0" layoutY="196.0" />

        <!-- Botones de acción -->
        <Button fx:id="btnAnadir" layoutX="15.0" layoutY="264.0" onAction="#Mostrar" prefWidth="100.0" text="mostrar podcast" />


        <!-- Botón Salir -->
        <Button fx:id="btnSalir" layoutX="500.0" layoutY="350.0" onAction="#cerrarVentana" prefWidth="70.0" text="Salir" />
    </children>

</AnchorPane>
